<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Virtual Traveler</title>
  <link href="css/reset.css" rel="stylesheet" type="text/css">
  <link href="css/base.css" rel="stylesheet" type="text/css" />
  <link href="css/favorites.css" rel="stylesheet" type="text/css" />
</head>

<body id="bodyBackgroundCity">

  <header>
    <nav class="navSection">
      <a class="mainNav" href="/">Home</a>
      <a class="mainNav" href="">Favorites</a>
      <a class="mainNav" onclick="history.back()">Back</a>
    </nav>
  </header>
  </br>
  </br>
  </br>
  </br>
  <main class="main">

    <div class="bodyFavoritesPage">
      <% favorites.forEach(value=> { %>
        <section class="background">
          <img class="favoriteImages" src="<%= value.image_url %>">
          <p class="photoCaption">
            <%= value.name %>
          </p>
          <form class="delete-button" action="/delete/<%= value.id %>?_method=DELETE" method="POST">
            <button><a href="/delete/<%= value.id %>">Remove from Favorites</a></button>
          </form>
        </section>
        <% }); %>
    </div>

  </main>

  <span class="footerImages">
    <a href="https://www.linkedin.com/in/andrew149/"><img class="profileImages" src="css/img/andrew.png" alt=""></a>
    <a href="https://www.linkedin.com/in/courtneycodes/"><img class="profileImages" src="css/img/courtney.png"
        alt=""></a>
    <a href="https://www.linkedin.com/in/dianestephani/"><img class="profileImages" src="css/img/diane.png" alt=""></a>
    <a href="https://www.linkedin.com/in/robert-carter-035baa165/"><img class="profileImages" src="css/img/robert.png"
        alt=""></a>
  </span>

</body>

</html>